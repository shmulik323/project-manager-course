pipeline {
    agent none
    stages {

        stage('Front-end') {
            agent {
                docker { image 'node:7.10.1' }
            }
            steps {
	     withEnv(["HOME=${env.WORKSPACE}"]) {
	     	sh 'cd client &&sudo npm install -g npx  && npm run dev'
		 }
            }
        }
	        stage('Back-end') {
            agent {
                docker { image 'python:3-alpine' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	      git 'https://github.com/shmulik323/project-manager-course.git'
                    sh 'pip3.7 install -U -r requirements.txt --user'
			sh "python3.7 api/appserver.py  &"
			sh "python3.7 api/test_front.py "
		            
                }
            }
        }
    }
}
