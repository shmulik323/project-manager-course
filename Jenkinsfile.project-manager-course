
pipeline {
    agent none
    stages {

        stage('Front-end') {
            agent {
                docker { image 'node:10.15.3' }
            }
            steps {
	     withEnv(["HOME=${env.WORKSPACE}"]) {
	     	sh 'cd client && npm install  ckeditor/ckeditor5-theme-lark  '
		sh 'cd client   && npm run dev &'
		 }
            }
        }
	    stage('Back-end') {
            agent {
                docker { image 'circleci/python:3.7.2' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	            git 'https://github.com/shmulik323/project-manager-course.git'
	      
                    sh 'cd api && pip3.7 install -r requirements.txt --user'
			        sh "python3.7 api/appserver.py &"
		            
                }
            }
        }
        stage('Tests-Front') {
            agent {
                docker { image 'selenium/standalone-chrome' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	      git 'https://github.com/shmulik323/project-manager-course.git'
	      
			sh " python3 api/test_front.py "
		            
                }
            }
        }
    }
}