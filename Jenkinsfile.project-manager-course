
pipeline {
    agent none
    stages {
        stage('Shell') {
            agent {
                docker { image 'circleci/python:3.7.2' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	            git 'https://github.com/shmulik323/project-manager-course.git'
                    sh 'cd api'
                    sh 'pipenv shell &'
                    sh 'pip install -r api/requirements.txt --user'
                }
            }
        }
        stage('Front-end') {
            agent {
                docker { image 'node:10.15.3' }
            }
            steps {
	     withEnv(["HOME=${env.WORKSPACE}"]) {
	     	sh 'cd client && npm i  '
		    sh 'cd client   && npm run dev &'
		 }
            }
        }
	    stage('Back-end') {
            agent {
                docker { image 'circleci/python:3.7.2' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	            git 'https://github.com/shmulik323/project-manager-course.git'
                   
			        sh "python api/appserver.py &"
		            
                }
            }
        }
        stage('Tests-2') {
            agent {
                docker { image 'selenium/standalone-chrome' }
            }
            steps {
              withEnv(["HOME=${env.WORKSPACE}"]) {
	            git 'https://github.com/shmulik323/project-manager-course.git'
	        
			    sh "python api/test_2.py "
		            
                }
            }
        }
    }
}