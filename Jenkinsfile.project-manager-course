pipeline {
    agent { docker { image 'python:3-alpine' } }
    stages {
        stage('Git') {
            steps{
                // echo 'Getting the code from GitHub...'
                git 'https://github.com/shmulik323/project-manager-course.git'
            }
        }
        stage('Requirements'){
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    //echo 'Installing Requirements...'
		  
                    sh 'pip3.7 install -U -r requirements.txt --user'
		            
                }
            }
        }

stage('npm-build') {
    agent {
        docker {
            image 'node:11'
        }
    }
 
     steps {
                nodejs(nodeJSInstallationName: 'Node 11.x', configId: 'package.json') {
                    sh "cd client"
                    sh 'npm config ls'
                    sh 'npm install'
                }
    }
}
        stage('Run Tests'){
            steps{
                // echo 'Testing User app...'
		withEnv(["HOME=${env.WORKSPACE}"]) {
			sh "cd api"
			sh "python3.7 appserver.py"
			sh "python3.7 test_front.py"
			}
            }
        }

	stage('Run site'){
            steps{
                // echo 'Testing User app...'
		withEnv(["HOME=${env.WORKSPACE}"]) {
	 	        sh "python3.7 website.py &"

			}
            }
        }
    }
}
